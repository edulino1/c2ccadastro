CREATE TABLE car_c2c.USUARIO (
ID INT8,
NOME CHARACTER VARYING(100),
LOGIN CHARACTER VARYING(100),
SENHA CHARACTER VARYING(100)
);

CREATE TABLE CAR_C2C.CARRO(
ID INT8,
NOME CHARACTER VARYING(100),
MODELO CHARACTER VARYING(100),
TIPO CHARACTER VARYING(100),
PLACA CHARACTER VARYING(100),
COR CHARACTER VARYING(100),
DESCRICAO CHARACTER VARYING(300)
);


ALTER TABLE CAR_C2C.USUARIO ADD CONSTRAINT PK_USUARIO_ID PRIMARY KEY (ID);
ALTER TABLE CAR_C2C.CARRO ADD CONSTRAINT PK_CARRO_ID PRIMARY KEY (ID);